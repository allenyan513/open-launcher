{
  "name": "saas-starter",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "pnpm run cp-env && turbo run dev",
    "build": "pnpm run cp-env && turbo run build",
    "pm2:start": "pm2 startOrReload ecosystem.config.js",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "email:dev": "turbo run email:dev",
    "email:build": "turbo run email:build",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "stripe:listen": "stripe listen --forward-to=localhost:5500/orders/webhook",
    "cp-env": "sh ./scripts/cp-env.sh",
    "clean": "sh ./scripts/clean.sh"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@next/eslint-plugin-next": "^15.3.3",
    "@playwright/test": "^1.44.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/negotiator": "^0.6.4",
    "@types/node": "^24.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-google-oauth2": "^0.1.10",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-turbo": "^2.0.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pagefind": "^1.3.0",
    "prettier": "^3.2.5",
    "prisma": "latest",
    "react-email": "^4.0.16",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  }
}
